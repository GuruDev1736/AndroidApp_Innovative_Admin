<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ui.home.UploadProject.UploadProject">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/img"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Title"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary"
                    app:boxStrokeErrorColor="@color/red"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/gray"
                    app:boxCornerRadiusTopStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:textSize="18sp"
                        android:padding="20dp"
                        android:inputType="text"
                        android:textColorHighlight="@color/primary"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/reference_layout"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:hint="Reference Id"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary"
                        app:boxStrokeErrorColor="@color/red"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/gray"
                        app:boxCornerRadiusTopStart="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_ReferenceId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito"
                            android:textSize="18sp"
                            android:padding="20dp"
                            android:editable="false"
                            android:focusable="false"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:inputType="none"
                            android:textColorHighlight="@color/primary"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageButton
                        android:id="@+id/generatedid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_downloading_24"
                        android:layout_gravity="center|end"
                        android:layout_margin="10dp"
                        android:background="@color/white"
                        android:padding="10dp"/>
                </LinearLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Description_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"
                    app:boxStrokeColor="@color/primary"
                    android:layout_marginTop="10dp"
                    app:hintTextColor="@color/primary"
                    app:boxStrokeErrorColor="@color/red"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/gray"
                    app:boxCornerRadiusTopStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:textSize="18sp"
                        android:padding="20dp"
                        android:inputType="textMultiLine"
                        android:isScrollContainer="true"
                        android:maxLength="2000"
                        android:singleLine="false"
                        android:layout_weight="1"
                        android:maxLines="4"
                        android:textColorHighlight="@color/primary"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Feature_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Feature's"
                    app:boxStrokeColor="@color/primary"
                    android:layout_marginTop="10dp"
                    app:hintTextColor="@color/primary"
                    app:boxStrokeErrorColor="@color/red"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/gray"
                    app:boxCornerRadiusTopStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_feature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:textSize="18sp"
                        android:padding="20dp"
                        android:inputType="textMultiLine"
                        android:isScrollContainer="true"
                        android:maxLength="2000"
                        android:singleLine="false"
                        android:layout_weight="1"
                        android:maxLines="4"
                        android:textColorHighlight="@color/primary"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Advantage_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Advantage"
                    app:boxStrokeColor="@color/primary"
                    android:layout_marginTop="10dp"
                    app:hintTextColor="@color/primary"
                    app:boxStrokeErrorColor="@color/red"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/gray"
                    app:boxCornerRadiusTopStart="10dp"
                  >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_advantage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:textSize="18sp"
                        android:padding="20dp"
                        android:inputType="textMultiLine"
                        android:isScrollContainer="true"
                        android:maxLength="2000"
                        android:singleLine="false"
                        android:layout_weight="1"
                        android:maxLines="4"
                        android:textColorHighlight="@color/primary"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Disadvantage_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Disadvantage"
                    app:boxStrokeColor="@color/primary"
                    android:layout_marginTop="10dp"
                    app:hintTextColor="@color/primary"
                    app:boxStrokeErrorColor="@color/red"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/gray"
                    app:boxCornerRadiusTopStart="10dp"
                >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_disadvantage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:textSize="18sp"
                        android:padding="20dp"
                        android:inputType="textMultiLine"
                        android:isScrollContainer="true"
                        android:maxLength="2000"
                        android:singleLine="false"
                        android:layout_weight="1"
                        android:maxLines="4"
                        android:textColorHighlight="@color/primary"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Price_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price"
                    app:boxStrokeColor="@color/primary"
                    android:layout_marginTop="10dp"
                    app:hintTextColor="@color/primary"
                    app:boxStrokeErrorColor="@color/red"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/gray"
                    app:boxCornerRadiusTopStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:textSize="18sp"
                        android:padding="20dp"
                        android:inputType="numberDecimal"
                        android:textColorHighlight="@color/primary"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatSpinner
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="20dp"
                    android:spinnerMode="dialog"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/uploadProject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nunito"
                    android:layout_margin="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>